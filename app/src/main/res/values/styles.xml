<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="IconContactInfo">
        <item name="android:layout_marginRight">@dimen/info_icon_left_margin</item>
        <item name="android:layout_marginLeft">@dimen/info_icon_left_margin</item>
        <item name="android:layout_marginTop">@dimen/info_icon_margin</item>
        <item name="android:layout_marginBottom">@dimen/info_icon_margin</item>
    </style>

    <!--************************************** TEXTS ************************************** -->
    <style name="TextStyleCardTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/card_title_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextStyleCardSubtitle">
        <item name="android:textSize">@dimen/card_subtitle_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CollapsingToolbarTextInfoClosed">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CollapsingToolbarTextInfoOpened">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:shadowColor">@color/colorGrey4</item>
        <item name="android:shadowRadius">4</item>
    </style>


    <!--************************************** TOOLBAR ************************************** -->
    <style name="ToolbarWithReturnButton" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="navigationIcon">@drawable/ic_back_arrow</item>
    </style>

</resources>
